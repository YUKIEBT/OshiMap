
<%= render 'layouts/error_messages', resource: @post %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-center bg-dark text-light p-4">新規投稿</h3>

      <%= form_with model: @post, local: true, html: { enctype: "multipart/form-data" } do |f| %>
        <div class="form-body p-4">

          <div class="form-group">
            <%= f.label :image, "写真を選択" %>
            <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
          </div>

          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :body, "詳細・エピソード" %>
            <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: '推しの詳細、具体的なエピソード' %>
          </div>

          <div class="form-group">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, class: "form-control", placeholder: "例: 東京都庁" %>
          </div>

          <div class="text-center">
            <%= f.submit "投稿", class: "btn btn-primary mt-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>