<div class="container py-5">
  <h2 class="text-center mb-4">投稿一覧</h2>
  
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg h-100">
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_image(300, 200), class: "card-img-top" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5>
              <%= link_to post.title, post_path(post), class: "text-dark" %>
            </h5>

            <div class="d-flex align-items-center mt-2">
              <div class="mr2">
                <%= image_tag post.user.get_profile_image(50, 50), class: "rounded-circle" %>
              </div>
              <div>
                <small class="text-muted">By
                  <%= link_to post.user.name, user_path(post.user), class: "text-info" %>
                </small>
              </div>
            </div>

            <div class="mt-2">
              <i class="fas fa-comment"></i><%= post.comments.count %> コメント
            </div>

            <small class="text-muted mt-auto pt-2">
              <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
            </small>

          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>