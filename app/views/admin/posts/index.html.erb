<div class="container py-4">
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>作成日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= link_to "削除", admin_post_path(post),
                                  method: :delete,
                                  data: { confirm: "本当に削除しますか？" },
                                  class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>