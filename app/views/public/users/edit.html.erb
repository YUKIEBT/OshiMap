<%= render 'layouts/error_messages', resource: @user %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: user_path(@user), local: true, html: { enctype: "multipart/form-data" } do |f| %>
      
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder:"名前"%>
        </div>

        <div class="form-group">
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, accept: "image/*", class: 'form-control-file' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: 'form-control', placeholder:"自己紹介" %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>

    </div>
  </div>

</div>

