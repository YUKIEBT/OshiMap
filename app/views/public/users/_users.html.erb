<h2 class="mb-4">ユーザー一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user), class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
